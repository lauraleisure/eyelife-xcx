/* pages/login/login.wxss */

.page{
  position: relative
}
.bg-box{
  position: relative;
  width: 100%;
  height: 100vh;
  padding: 0;
  margin: 0 auto;
  background: url('https://res.51huanche.com/xidiantour/bg00.png') center no-repeat;
  background-size: 100% 100%;
}
.login-bg{
  width: 100%;  
  height: 100%;
}
.msgBox{
   position: absolute;
   left: 0;
  right: 0;
  bottom: 20%; 
  width: 88%;
  outline:none;
  margin: 0 auto;
  color: #e6d0d0;
  text-align: center;
  line-height: 56rpx;
  font-size: 24rpx;
}
.sub-btn{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 10%; 
  width: 40%;
  outline:none;
  margin: 0 auto;  
 
}
.submit-btn{
   border: 2rpx solid #ead095;
   background: #fff3df;
   color: #797673;
   outline:none;
   line-height: 62rpx;
   box-shadow: 0px 0px 0px 3px  #fff3df;
   font-size: 28rpx;
   border-radius: 16rpx;
}

/* 弹出层 */
.modalDlg{
  width: 80%;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  -o-transform: translate(-50%, -50%);
  z-index: 9999;
  margin: 0 auto;
  color: #333333;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border: 1rpx solid #d1d1d1;
  box-shadow: 0 2rpx 40rpx 0 #5c5b5b;
  

}

.modalDlg .modalDlg-title {
  padding: 20rpx 20rpx;
  border-bottom: 1px solid #d1d1d1;
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  background-color: #F8F8F8;
  border-radius: 2px 2px 0 0;
}
.modalDlg-content{
  padding: 10rpx 40rpx 20rpx;
}
.modalDlg-item-box{
 line-height: 68rpx;
 font-size: 28rpx;

}
.age-input{
  width: 35%;
  margin-right: 20rpx;
}
.form-label{
  display: block;  
  font-weight: 400;
}

input{
  display: block;  
  border: 1rpx solid #e6e6e6;
  background: #fff;
  border-radius: 2rpx;
  height: 56rpx;
  line-height: 56rpx;
  box-sizing: border-box;

}
radio-group{
  font-size: 28rpx;  
  line-height: 46rpx;
}
radio{ 
  width: 50%;
}
radio .wx-radio-input{ 
  /* 自定义样式.... */
    height: 36rpx; 
    width: 36rpx; 
    border-radius: 50%;
    border: 2rpx solid #d1d1d1;
    background: transparent;

}
radio text{
   margin-left: 16rpx;
}
.pop-sub-btn{
  border-radius: 0!important;
}
.homeIcon{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  left: 44rpx;

}
.homeIcon image{
  width: 100%;
  height: 100%;
}