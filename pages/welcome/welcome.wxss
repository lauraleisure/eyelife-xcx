/* pages/welcome/welcome.wxss */
.page{
     position: relative;  
}
.page-wrapper{
  position: relative;
  background: #9D3538; 
  width: 100%;
  height: 100vh;
  padding: 0 20rpx;
  margin: 0 auto;  
}
.title{
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
}
.title-line .txt-cont{
  font-size: 24rpx;
  text-align: center;
  line-height: 80rpx;
}
.txt-title{
   color: #f3e7e7;
}
.txt-cont{
  color: #cd9395;
}
.page-wrapper,.interest-wrapper,.item-wrapper{
  box-sizing: border-box;
  margin: auto;
}
.item-wrapper{
   margin:40rpx auto;
}
.item-wrapper .txt-title{
  text-align: center;
  line-height: 80rpx;
}
.opt-wrapper{
  box-sizing: border-box;
  flex-wrap: wrap;
}
.opt-wrapper .item{
  width: 24%;
  text-align: center;
}
.btn.selected{
   border: 2rpx solid #ead095;
   background: #fff3df;
   color: #797673;
   outline:none;
    box-shadow: 0px 0px 0px 3px  #fff3df;
     border-radius: 16rpx;
}
.btn{
   border: 2rpx solid #ffffff;
   background: #ffffff;
   color: #797673;
   outline:none;
    box-shadow: 0px 0px 0px 3px  #ffffff;
     border-radius: 16rpx;
}
.item.btn{  
   line-height: 50rpx;  
   font-size: 28rpx;  
   margin: 20rpx 60rpx;

}
.go.btn{
  line-height: 58rpx;  
   font-size: 28rpx;  
    margin-top: 20rpx;  
}
.btn-wrapper{
  width: 60%;
  text-align: center;
  margin: 20rpx auto;
}
.btn-wrapper .txt-cont{
  font-size: 22rpx;
  line-height: 60rpx;
}
.btn-wrapper .btn{
  width: 80%;
}